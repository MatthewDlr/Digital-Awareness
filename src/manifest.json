{
  "manifest_version": 3,
  "name": "Digital Awareness",
  "version": "1.0.0",
  "description": "Unlearn bad habits and become more aware of your digital life.",
  "icons": {
    "128": "./assets/logo-128.png",
    "256": "./assets/logo-256.png",
    "512": "./assets/logo-512.png"
  },
  "host_permissions": ["*://*/*"],
  "permissions": ["storage", "tabs", "activeTab", "webNavigation", "unlimitedStorage", "notifications"],
  "options_page": "index.html#/options/about",
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["doomScrolling.js"],
      "run_at": "document_end"
    }
  ]
}
